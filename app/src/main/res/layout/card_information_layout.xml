<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#af0a0707">

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup01"/>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="40"
            android:layout_marginLeft="20dp">
            <com.etermax.borbotones.widget.CustomFontTextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Grobold"
                android:text="Ciencia"
                android:textSize="35dp"
                android:textColor="@color/blueDark"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.etermax.borbotones.widget.CustomFontTextView
                    android:id="@+id/card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Grobold"
                    android:text="A 150"
                    android:textSize="25dp"
                    android:textColor="@color/blueDark"/>
                <com.etermax.borbotones.widget.CustomFontTextView
                    android:id="@+id/card_attack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Grobold"
                    android:text="D 180"
                    android:textSize="20dp"
                    android:textColor="@color/blueDark"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <!--<com.etermax.borbotones.widget.CustomFontTextView
                android:id="@+id/card_defence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Grobold"
                android:text="mejor"
                android:textSize="20dp"
                android:textColor="@color/blueDark"/>-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/card_description"
                    android:layout_width="match_parent"
                    android:layout_below="@id/card_image"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/blueVeryDark"
                    android:text=" was an Austrian neurologist and the founder of psychoanalysis, a clinical method for treating psychopathology through dialogue between a patient and a psychoanalyst.[3] Freud was born to Galician Jewish parents in the Moravian town of Freiberg, in the Austro-Hungarian Empire. He qualified as a doctor of medicine in 1881 at the University of Vienna.[4][5] Upon completing his habilitation in 1885, he was appointed a docent in neuropathology and became an affiliated professor in 1902."/>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <com.etermax.borbotones.widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Sigmund Freud"
        style="@style/Grobold"
        android:textSize="23dp"
        android:textColor="@color/white"/>
</RelativeLayout>