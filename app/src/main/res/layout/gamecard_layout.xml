<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivFlippedBackground"
        android:layout_width="match_parent"
        android:scaleType="centerInside"
        android:layout_height="match_parent"
        android:src="@drawable/card_revere"/>

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivCardBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/card2"/>

        <ImageView
            android:id="@+id/ivCardBa"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <com.etermax.borbotones.widget.CustomFontTextView
            android:visibility="gone"
            android:id="@+id/tvAttackPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            style="@style/MikadoBlack"
            android:text="A:20"
            android:textSize="20dp"/>
        <com.etermax.borbotones.widget.CustomFontTextView
            android:id="@+id/tvLifePoints"
            android:visibility="gone"
            android:text="L:20/20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            style="@style/MikadoBlack"/>
    </RelativeLayout>
</RelativeLayout>