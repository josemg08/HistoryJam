<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="150px"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo"/>


        <com.etermax.borbotones.widget.CustomFontButton
            android:id="@+id/history_button"
            style="@style/mode_selection_button_style"
            android:layout_width="900px"
            android:layout_height="200px"
            android:background="@drawable/background_button_green"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150px"
            android:textSize="75px"
            android:text="@string/history"/>

        <com.etermax.borbotones.widget.CustomFontButton
            android:id="@+id/vs_button"
            style="@style/mode_selection_button_style"
            android:layout_width="900px"
            android:layout_height="200px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_button_blue"
            android:layout_marginTop="100px"
            android:textSize="75px"
            android:text="@string/vs"/>

        <com.etermax.borbotones.widget.CustomFontButton
            android:id="@+id/my_deck_button"
            style="@style/mode_selection_button_style"
            android:layout_width="900px"
            android:layout_height="200px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_button_aqua"
            android:layout_marginTop="100px"
            android:textSize="75px"
            android:text="@string/my_deck"/>
    </LinearLayout>

</RelativeLayout>
<!--.___ End of mode_selection_layout __.-->