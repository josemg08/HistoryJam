<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_history_information"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/history_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/history_event_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/earth"/>

    <Button
        android:id="@+id/play_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/primary_button_background"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/history_event_image"
        android:layout_marginBottom="10dp"
        style="@style/mode_selection_button_style"
        android:text="PLAY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/history_event_image">

        <TextView
            android:id="@+id/history_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </ScrollView>

</RelativeLayout>
<!--.___ End of activity_history_information __.-->
