<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="@android:colorPrimary">@color/colorPrimary</item>
        <item name="@android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="@android:colorAccent">@color/colorAccent</item>
    </style>

    <!--.___ Mode selection styles __.-->

    <style name="mode_selection_button_style" parent="MikadoBlack">
        <item name="android:layout_marginLeft">@dimen/distance_50</item>
        <item name="android:layout_marginRight">@dimen/distance_50</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.UserDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
