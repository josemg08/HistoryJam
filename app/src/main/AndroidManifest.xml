<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.etermax.borbotones">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".BorbotonesApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ModeSelectionActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".ui.HistoricEventSelectionActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".ui.MyDeckActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.HistoryInformationActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.CardInformationActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.MatchActivity" android:screenOrientation="landscape"/>


    </application>

</manifest>